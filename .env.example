# Copie este arquivo para ".env" e preencha os valores reais.
# Nunca versione o arquivo .env com segredos.

# Ambiente da aplicação (development ou production)
APP_ENV=development

# URL base do sistema (defina em produção para evitar auto-detecção)
BASE_URL=http://localhost/petfinder

# Banco de dados
DB_HOST=localhost
DB_NAME=petfinder
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Efí Bank (Pix)
EFI_CLIENT_ID=
EFI_CLIENT_SECRET=
EFI_PIX_KEY=
EFI_PIX_DESCRIPTION=Doação para PetFinder
EFI_PIX_NOTIFICATION_URL=https://seu-dominio.com/api/efi-webhook.php
EFI_BASE_URL=https://api.efipay.com.br/api/
EFI_WEBHOOK_TOKEN=
EFI_CERTIFICATE_PATH=
EFI_CERTIFICATE_PASSWORD=
EFI_SANDBOX=true

# Configurações de e-mail (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
EMAIL_FROM_NAME=PetFinder

# Credenciais administrativas padrão (usar apenas no setup)
DEFAULT_ADMIN_EMAIL=admin@petfinder.com
DEFAULT_ADMIN_PASSWORD=Admin@123
DEFAULT_ADMIN_NAME=Administrador
DEFAULT_ADMIN_PHONE=000000000
DEFAULT_ADMIN_CITY=
DEFAULT_ADMIN_STATE=

# Flags temporárias (habilite apenas em desenvolvimento)
# DEFAULT_ADMIN_UNLOCK=true
# DEFAULT_ADMIN_RESET_PASSWORD=true
# DEFAULT_ADMIN_FORCE=true

# Geração de token temporário (apenas referência)
# TEMP_WEBHOOK_TOKEN=[guid]::NewGuid().ToString("N")
