# PetFinder - Apache Configuration
RewriteEngine On
RewriteBase /petfinder/

# Redirecionar para HTTPS (produção)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirecionar URLs amigáveis para views/
RewriteRule ^busca/?$ views/busca.php [L]
RewriteRule ^novo-anuncio/?$ views/novo-anuncio.php [L]
RewriteRule ^doar/?$ views/doar.php [L]
RewriteRule ^doacao-pix/?$ views/doacao-pix.php [L]
RewriteRule ^transparencia/?$ views/transparencia.php [L]
RewriteRule ^admin/?$ views/admin.php [L]
RewriteRule ^admin/usuarios/?$ views/admin-usuarios.php [L]
RewriteRule ^admin/financeiro/export/?$ views/admin-financeiro-export.php [L]
RewriteRule ^admin/financeiro/?$ views/admin-financeiro.php [L]
RewriteRule ^cadastro/?$ views/cadastro.php [L]
RewriteRule ^login/?$ views/login.php [L]
RewriteRule ^perfil/?$ views/perfil.php [L]
RewriteRule ^favoritos/?$ views/favoritos.php [L]
RewriteRule ^alertas/?$ views/alertas.php [L]
RewriteRule ^ajuda/?$ views/ajuda.php [L]
RewriteRule ^parceiros/?$ views/parceiros.php [L]
RewriteRule ^parceiros/inscricao/?$ views/parceiros-inscricao.php [L]
RewriteRule ^parceiro/painel/?$ views/parceiro-painel.php [L]
RewriteRule ^parceiro/perfil/?$ views/parceiro-perfil.php [L]
RewriteRule ^parceiro/pagamento/?$ views/parceiro-pagamento.php [L]
RewriteRule ^parceiro/pix/?$ views/parceiro-pix.php [L]
RewriteRule ^parceiro/([^/]+)/?$ views/parceiro-publico.php?slug=$1 [L,QSA]
RewriteRule ^admin/parceiros/?$ views/admin-parceiros.php [L]
RewriteRule ^anuncio/?$ views/anuncio-detalhes.php [L]
RewriteRule ^meus-anuncios/?$ views/meus-anuncios.php [L]
RewriteRule ^logout/?$ views/logout.php [L]
RewriteRule ^api/efi-billing-notification/?$ api/efi-billing-notification.php [L]

# Páginas de LGPD e Termos
RewriteRule ^politica-privacidade/?$ views/paginas-estaticas/politica-privacidade.php [L]
RewriteRule ^termos-uso/?$ views/paginas-estaticas/termos-uso.php [L]
RewriteRule ^politica-cookies/?$ views/paginas-estaticas/politica-cookies.php [L]
RewriteRule ^lgpd/?$ views/paginas-estaticas/lgpd.php [L]
RewriteRule ^contato-dpo/?$ views/paginas-estaticas/contato-dpo.php [L]

# Remover .php das URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^.]+)$ $1.php [NC,L]

# Proteger diretórios
<Files config.php>
    Order allow,deny
    Deny from all
</Files>

# Cache de assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
</IfModule>

# Compressão
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript
</IfModule>