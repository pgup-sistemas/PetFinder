# PetFinder - Apache Configuration
# Subdomínio: petfinder.pageup.net.br
# Diretório: /public_html/petfinder

<IfModule mod_rewrite.c>
    RewriteEngine On
    # Como é um subdomínio, a base é a raiz
    RewriteBase /

    # Força HTTPS (DESCOMENTE após confirmar que está tudo funcionando)
    # RewriteCond %{HTTPS} off
    # RewriteCond %{HTTP_HOST} ^petfinder\.pageup\.net\.br$ [NC]
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [L,R=301]

    # Ignorar arquivos e diretórios reais
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # API primeiro (para não interferir com outras regras)
    RewriteRule ^api/efi-billing-notification/?$ api/efi-billing-notification.php [L,QSA]

    # Rotas administrativas
    RewriteRule ^admin/?$ views/admin.php [L,QSA]
    RewriteRule ^admin/usuarios/?$ views/admin-usuarios.php [L,QSA]
    RewriteRule ^admin/financeiro/export/?$ views/admin-financeiro-export.php [L,QSA]
    RewriteRule ^admin/financeiro/?$ views/admin-financeiro.php [L,QSA]
    RewriteRule ^admin/parceiros/?$ views/admin-parceiros.php [L,QSA]

    # Rotas de parceiros (ordem importa!)
    RewriteRule ^parceiros/inscricao/?$ views/parceiros-inscricao.php [L,QSA]
    RewriteRule ^parceiros/?$ views/parceiros.php [L,QSA]
    RewriteRule ^parceiro/painel/?$ views/parceiro-painel.php [L,QSA]
    RewriteRule ^parceiro/perfil/?$ views/parceiro-perfil.php [L,QSA]
    RewriteRule ^parceiro/pagamento/?$ views/parceiro-pagamento.php [L,QSA]
    RewriteRule ^parceiro/pix/?$ views/parceiro-pix.php [L,QSA]
    RewriteRule ^parceiro/([^/]+)/?$ views/parceiro-publico.php?slug=$1 [L,QSA]

    # Rotas principais do sistema
    RewriteRule ^cadastro/?$ views/cadastro.php [L,QSA]
    RewriteRule ^login/?$ views/login.php [L,QSA]
    RewriteRule ^logout/?$ views/logout.php [L,QSA]
    RewriteRule ^perfil/?$ views/perfil.php [L,QSA]
    RewriteRule ^busca/?$ views/busca.php [L,QSA]
    RewriteRule ^novo-anuncio/?$ views/novo-anuncio.php [L,QSA]
    RewriteRule ^meus-anuncios/?$ views/meus-anuncios.php [L,QSA]
    RewriteRule ^anuncio/?$ views/anuncio-detalhes.php [L,QSA]
    RewriteRule ^anuncio/editar/([0-9]+)/?$ views/editar-anuncio.php?id=$1 [L,QSA]
    RewriteRule ^favoritos/?$ views/favoritos.php [L,QSA]
    RewriteRule ^alertas/?$ views/alertas.php [L,QSA]

    # Rotas de ação
    RewriteRule ^excluir-anuncio/?$ views/excluir-anuncio.php [L,QSA]
    RewriteRule ^marcar-resolvido/?$ views/marcar-resolvido.php [L,QSA]
    RewriteRule ^favorito/toggle/?$ views/favorito_toggle.php [L,QSA]

    # Rotas de autenticação e email
    RewriteRule ^reenviar-confirmacao/?$ views/reenviar-confirmacao.php [L,QSA]
    RewriteRule ^confirmar-email/?$ views/confirmar-email.php [L,QSA]
    RewriteRule ^recuperar-senha/?$ views/recuperar-senha.php [L,QSA]
    RewriteRule ^resetar-senha/?$ views/resetar-senha.php [L,QSA]

    # Rotas de doação
    RewriteRule ^doar/?$ views/doar.php [L,QSA]
    RewriteRule ^doacao-pix/?$ views/doacao-pix.php [L,QSA]
    RewriteRule ^transparencia/?$ views/transparencia.php [L,QSA]

    # Páginas institucionais
    RewriteRule ^ajuda/?$ views/ajuda.php [L,QSA]

    # Páginas de LGPD e Termos
    RewriteRule ^politica-privacidade/?$ views/paginas-estaticas/politica-privacidade.php [L,QSA]
    RewriteRule ^termos-uso/?$ views/paginas-estaticas/termos-uso.php [L,QSA]
    RewriteRule ^politica-cookies/?$ views/paginas-estaticas/politica-cookies.php [L,QSA]
    RewriteRule ^lgpd/?$ views/paginas-estaticas/lgpd.php [L,QSA]
    RewriteRule ^contato-dpo/?$ views/paginas-estaticas/contato-dpo.php [L,QSA]
</IfModule>

# Bloquear listagem de diretórios
Options -Indexes

# Proteger arquivos sensíveis
<FilesMatch "^(config\.php|\.env|\.git.*|\.htaccess|\.htpasswd)$">
    Require all denied
</FilesMatch>

# Proteger diretórios sensíveis
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(includes|config|vendor|\.git)/.*$ - [F,L]
</IfModule>

# Cache de assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Headers de segurança
<IfModule mod_headers.c>
    # Prevenir XSS
    Header set X-XSS-Protection "1; mode=block"

    # Prevenir Clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Prevenir MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Remover informações do servidor
    Header unset X-Powered-By
    Header unset Server
</IfModule>

# Configurações PHP (se permitido)
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_flag display_errors Off
    php_flag log_errors On
</IfModule>

# Tratar erros 404
ErrorDocument 404 /404.php
ErrorDocument 403 /403.php
ErrorDocument 500 /500.php